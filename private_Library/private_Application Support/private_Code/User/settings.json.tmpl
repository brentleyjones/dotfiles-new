{
    /* Visual */
    "window.autoDetectColorScheme": true,
    "window.autoDetectHighContrast": false,
    "window.nativeTabs": true,
    "window.titleBarStyle": "native",
    "workbench.editor.empty.hint": "hidden",
    "workbench.iconTheme": "vscode-icons",
    "vsicons.dontShowNewVersionMessage": true,

    // Make source editor look like Xcode
    "editor.fontFamily": "SFMono Nerd Font, SFMono, Menlo, Monaco, Courier New, monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 13,
    "editor.lineHeight": 18,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
    ],
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    "workbench.colorTheme": "Xcode Default (Light)",
    "workbench.editor.tabActionLocation": "left",
    "workbench.preferredLightColorTheme": "Xcode Default (Light)",
    "workbench.preferredDarkColorTheme": "Xcode Default (Dark)",
    "workbench.tree.indent": 16,

    // Make terminal look like iTerm2
    "terminal.integrated.altClickMovesCursor": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontFamily": "SFMono Nerd Font, SFMono, Menlo, Monaco, Courier New, monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.minimumContrastRatio": 1,
    "workbench.colorCustomizations": {
        "terminal.background": "#ffffff",
        "terminal.foreground": "#000000",
        "terminalCursor.background": "#ffffff",
        "terminalCursor.foreground": "#000000",
        "terminal.ansiBlack": "#000000",
        "terminal.ansiBlue": "#0225c7",
        "terminal.ansiBrightBlack": "#676767",
        "terminal.ansiBrightBlue": "#6871ff",
        "terminal.ansiBrightCyan": "#5ffdff",
        "terminal.ansiBrightGreen": "#5ff967",
        "terminal.ansiBrightMagenta": "#ff76ff",
        "terminal.ansiBrightRed": "#ff6d67",
        "terminal.ansiBrightWhite": "#ffffff",
        "terminal.ansiBrightYellow": "#fefb67",
        "terminal.ansiCyan": "#00c5c7",
        "terminal.ansiGreen": "#00c200",
        "terminal.ansiMagenta": "#c930c7",
        "terminal.ansiRed": "#c91b00",
        "terminal.ansiWhite": "#c7c7c7",
        "terminal.ansiYellow": "#c7c400",
    },

    /* Editing */
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.preview": true,
    "editor.suggestSelection": "first",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "search.exclude": {
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true,
    },
    "security.workspace.trust.untrustedFiles": "open",
    "vim.handleKeys": { "<D-c>": false, "<D-v>": false },
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "workbench.startupEditor": "none",

    /* Git */
    "githubIssues.ignoreCompletionTrigger": [
        "bazel",
        "coffeescript",
        "diff",
        "dockerfile",
        "dockercompose",
        "ignore",
        "ini",
        "julia",
        "makefile",
        "perl",
        "powershell",
        "python",
        "r",
        "ruby",
        "shellscript",
        "yaml",
    ],
    "githubPullRequests.pullBranch": "never",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "projectManager.git.baseFolders": [
        "~/Developer",
        {{- if .workEmail }}
        "~/Developer/Work",
        {{- end }}
    ],
    "projectManager.git.maxDepthRecursion": 1,

    /* Terminal */
    "accessibility.signals.terminalBell": {
        "sound": "on",
    },
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.shellIntegration.enabled": false, /* Fixes integration with tide */

    /* Debugging */
    "lldb.launch.expressions": "native",

    /* Language specific settings */
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "[feature]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
    },
    "[java]": {
        "editor.defaultFormatter": "ilkka.google-java-format",
    },
    "[python]": {
        "editor.formatOnType": true,
    },
    "[shellscript]": {
        "editor.tabSize": 2,
    },
    "bazel.enableCodeLens": false,
    "bazel.lsp.command": "starpls",
    "bazel.queriesShareServer": true,
    "bsv.subscription.enabled": false,
    "bsv.buildifier.githubRelease": "5.0.1",
    "github.copilot.enable": {
        "*": true,
        "markdown": false,
        "plaintext": false,
        "scminput": false,
        "yaml": false,
    },
    "go.toolsManagement.autoUpdate": true,
    "google-java-format.executable-path": "/opt/homebrew/bin/google-java-format",
    "js/ts.implicitProjectConfig.checkJs": true,
    "markdown.extension.italic.indicator": "_",
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.languageServer": "Jedi",
    "shellcheck.customArgs": [
        "-x",
    ],
    "typescript.updateImportsOnFileMove.enabled": "always",

    /* Spellcheck */
    "cSpell.enableFiletypes": [
        "bazel",
    ],
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "feature",
        "go",
        "handlebars",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "swift",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml",
    ],
    "cSpell.userWords": [
        "barcode",
        "Bazel",
        "Bazelcon",
        "Bazelisk",
        "Brentley",
        "lldb",
        "merkle",
        "mnenomic",
        "rpath",
        "Starlark",
        "Starlarkification",
        "Toolchains",
    ],

    /* Remote */
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "brentley-ubuntu.local": "linux",
        "home.brentely.dev": "linux",
        "home.brentley.dev": "linux",
    },

    /* Other */
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1,
    },
}
